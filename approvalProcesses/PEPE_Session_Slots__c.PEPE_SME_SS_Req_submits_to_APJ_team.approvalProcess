            <field>PEPE_Session_Slots__c.Description__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>PEPE_Session_Slots__c.Speakers__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>PEPE_Session_Slots__c.Theater_Super_Regions_Geography__c</field>
