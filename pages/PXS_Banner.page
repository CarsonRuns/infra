<apex:page standardController="Case" showHeader="false" standardStylesheets="true" >
    <style>
        .cs1Text         { font-family: Arial, Helvetica, sans-serif; font-size: small; }
        .cs1RedBold      { color: red; font-weight: bold; }
        .cs1FloatLeft    { float: left; }
    </style>
      
    <apex:form id="formid">
                <apex:outputPanel id="Scheduler" layout="block" styleClass="cs1FloatLeft" style="margin-top:5px;" >      
              <apex:outputText value="{!$Label.PXS_Banner}"  styleClass="cs1Text cs1RedBold"/>
        </apex:outputPanel>               
    </apex:form>
</apex:page>