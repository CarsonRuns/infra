      }
      .stdropbtn {
      color: grey;
      background-color: white;
      border: none;
      cursor: pointer;
      margin-left: -5px;
      }
      .stdropdown {
      position: relative;
      display: inline-block;
      }
      .stcard-dropdown {
      float: right;
      margin-right: 10px;
      margin-top: 10px;
      }
      .stdropdown-content {
      display: none;
      position: absolute;
      right: 0;
      z-index: 9999;
      background-color: #f9f9f9;
      min-width: 120px;
      box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
      }
      .stdropdown-contentlong {
      display: none;
      position: absolute;
      right: 0;
      z-index: 9999;
      background-color: #0096d6;
      color: white;
      min-width: 300px;
      box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
      padding: 5px;
      height: 100px;
      overflow: auto;
      }
      .stdropdown-content a {
      color: black;
      padding: 5px 5px;
      text-decoration: none;
      display: block;
      }
      .stdropdown-content a:hover {
      background-color: #f1f1f1
      }
      .stdropdown-contentlong a {
      color: black;
      padding: 5px 5px;
      text-decoration: none;
      display: block;
      }
      .stdropdown-contentlong a:hover {
      background-color: #f1f1f1
      }
      .stdropdown:hover .stdropdown-content {
      display: block;
      }
      .stdropdown:hover .stdropdown-contentlong {
      display: block;
      }
