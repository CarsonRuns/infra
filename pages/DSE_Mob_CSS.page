     body,
     table {
     background-color: white;
     }
      .stform-control
      {
      max-width:90px !important;
      margin:2px;
      }
      .btn-xs
      {
          font-size: 10px;
      }
      .table-legend {
      max-width: 100%;
      color: white;
      }
      .td-legend
      {
      padding:10px;
